    {{ghost_head}}
</head>
<body class="{{body_class}}">

    <header class="header">
        {{#if @blog.logo}}<a class="site-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        <h3 class="site-title"><a href="{{@blog.url}}">{{@blog.title}}</a></h3>
        <p class="site-description">{{@blog.description}}</p>
    </header>

    <section class="content">
        <div class="inner">
            {{{body}}}
        </div>
    </section>

    <footer class="footer">
        <p class="poweredby">
            <a class="subscribe icon-rss" href="{{@blog.url}}/rss/">Subscribe to RSS</a><br />
            <span class="copyright">&copy; {{date format="YYYY"}} {{@blog.title}}</span><br />
            Proudly published with <a href="http://ghost.org" target="_blank" class="ghost">Ghost</a>
        </p>
    </footer>

    {{ghost_foot}}
    <script src="http://yandex.st/highlightjs/7.5/highlight.min.js"></script>
    <script src="{{asset "assets/js/lib.js"}}"></script>

</body>
</html>
